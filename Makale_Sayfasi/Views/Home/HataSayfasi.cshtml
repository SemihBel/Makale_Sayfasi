
@{
    ViewBag.Title = "Hata Sayfasi";

    Exception exception = null;
    if (TempData["Error"]!=null)
    {
        exception = TempData["Error"] as Exception;
    }
}



<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2><span class="glyphicon glyphicon-remove-circle"></span>Hata Oluştu</h2>
        <p>
            Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.
            <br />

            @if (exception != null)
            {
                <strong>Hata Detay:</strong> @exception.Message
                <br />
                <br />
            }
        </p>
        @Html.ActionLink("Ana Sayfaya Git!", "Index", "Home", null, new { @class = "btn btn-primary" })
    </div>
</div>

